{
  "name": "simlauncher",
  "version": "0.0.5.1",
  "description": "SimLauncher - Multi app launcher for simracing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --windows"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.simlauncher.app",
    "productName": "SimLauncher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "style.css",
      "package.json",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "SimLauncher.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}